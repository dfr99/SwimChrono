<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.profile.ProfileFragment">


    <TextView
        android:id="@+id/text_profile"
        style="@style/AppTextStyle.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/profile_fragment_title"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_perosnal_info"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_personal_info"

            android:text="@string/personal_info_title"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_my_qr"
            android:layout_width="214dp"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/icon_qr"
            android:gravity="center"
            android:paddingRight="8dp"
            android:text="@string/my_qr_title"
            android:textSize="16sp" />


        <Button
            android:id="@+id/button_profile_settings"
            android:layout_width="214dp"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/icon_settings"
            android:gravity="center"

            android:text="@string/settings_title"
            android:textSize="16sp" />


        <Button
            android:id="@+id/button_profile_logout"
            android:layout_width="214dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/red"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:gravity="center"
            android:text="@string/logout"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>