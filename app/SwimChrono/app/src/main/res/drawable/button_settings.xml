<?xml version="1.0" encoding="utf-8"?>
<!-- Hasta ahora no se esta usando este drawable-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/turquoise_200" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Estado por defecto -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/turquoise_700" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>