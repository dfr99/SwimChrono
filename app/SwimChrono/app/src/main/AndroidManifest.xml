<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SwimChrono"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.profile.ProfileSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.ProfileMyQRActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.ProfileNotificationsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.ProfileInfoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.referee.TimerActivity"
            android:exported="false" />
        <service android:name=".services.ApiService" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>