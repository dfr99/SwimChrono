<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTextStyle">
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <style name="AppTextStyle.Bold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:background">@color/turquoise_700</item>
        <item name="itemIconTint">@color/chrono_white</item>
        <item name="itemTextColor">@color/chrono_white</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/forest_blue_500</item>
        <item name="android:textColor">@color/chrono_white</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">3dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>


    <style name="CardViewStyleNight" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/forest_blue_500</item>
        <item name="android:textColor">@color/chrono_white</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="strokeColor">@color/turquoise_700</item>
        <item name="strokeWidth">3dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

</resources>
